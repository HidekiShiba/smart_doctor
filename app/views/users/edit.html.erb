<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>プロフィール編集</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <%= form_with model: @user, local:true do |f| %>
        <div class="form-group">
          <h6>プロフィール画像</h6>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group">
          <h6>お名前</h6>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <h6>生年月日</h6>
          <%= f.date_select :birth_date, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1990, 1, 1) %>
        </div>
        <div class="form-group">
          <h6>性別</h6>
          <%= f.label :男性  %>
          <%= f.radio_button :sex, :男性 %>
          <%= f.label :女性  %>
          <%= f.radio_button :sex, :女性 %>
        </div>
        <div class="form-group">
          <h6>メールアドレス</h6>
          <%= f.email_field :email %>
        </div>    
        <div class="form-group">
          <%= f.submit '更新', :class=>"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

