<h2>プロフィール</h2>
<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
  <table class="table">
    <tbody><tr></tr>
      <tr>
        <th>ID</th>
        <th><%= @user.id %></th>
      </tr>
      <tr>
        <th>お名前</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <th><%= @user.email %></th>
      </tr>
    </tbody></table>
  </table>
  <div class="row">
    <a href="/users/<%= @user.id %>/edit">プロフィール編集</a>
  </div>
</div>
